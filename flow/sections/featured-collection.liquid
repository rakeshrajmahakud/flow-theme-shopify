    <div class="page-width">
        <div class="grid product-card-wrapper">
        {% assign product_limit = section.settings.product_limit %} 
        {% for product in section.settings.collection_id.products  limit: product_limit %}
            <div class= "grid__item">
<!--                 {% render 'product-card' , product : product %} -->
                {% render 'product-cards' , product : product %}
            </div>
        {% endfor %}
        </div>
    </div>

  {%style%}
    .product-card-wrapper{
        padding : 5rem 0;
    }

  {%endstyle%}
  
{% schema %}
    {
        "name": "Featured collection",
        "tag": "section",
        "class": "section",
        "settings": [
            {
            "type": "collection",
            "id": "collection_id",
            "label": "Collection"
            },
            {
            "type": "range",
            "id": "product_limit",
            "min": 1,
            "max": 20,
            "step": 1,
            "label": "Product limit",
            "default": 8
            }
        ],
        "presets": [
            {
            "name": "Featured collection"
            }
        ]
    }
{% endschema %}